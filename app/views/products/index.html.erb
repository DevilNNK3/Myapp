<%= link_to "Create New Products ", new_product_path %>
<table class="table">
  <thead>
  	<tr>
  		<th>Name</th>
  		<th>Category</th>
      <th>Price</th>
      <th>Details</th>
  		<th colspan="2">Actions</th>
  	</tr>
  </thead>
  <tbody>
  	<% @products.each do |product| %>
  	<tr>
  		<td><%= product.name %></td>
  		<td><%= product.category %></td>
      <td><%= product.price %></td>
      <td><%= product.details %></td>
  		<td><%= link_to "Edit", edit_product_path(product.id) %></td>
  		<td><%= link_to "Delete", product_path(product.id), data: { confirm: 'Are you sure?'}, method: :delete %></td>
  	</tr>
<% end %>
  </tbody>
</table>