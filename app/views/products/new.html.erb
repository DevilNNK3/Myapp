<%= form_for @product do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :category %>:
  <%= f.text_field :category %><br />

  <%= f.label :price %>:
  <%= f.text_field :price %><br />

  <%= f.label :details %>:
  <%= f.text_area :details %><br />

  <%= f.submit "SAVE" %>
<% end %>