<%= link_to "Create new book", new_book_path %></br>
<table class="table table-bordered">
  <thead>
  	<tr>
  		<th>Name</th>
  		<th>Description</th>
  		<th colspan="2">Actions</th>
  	</tr>
  </thead>
  <tbody>
  	<% @books.each do |book| %>
  	<tr>
  		<td><%= book.name %></td>
  		<td><%= book.description %></td>
  		<td><%= link_to "Edit", edit_book_path(book.id) %></td>
  		<td><%= link_to "Delete", book_path(book.id), data: { confirm: 'Are you sure?'}, method: :delete %></td>
  	</tr>
<% end %>
  </tbody>
</table>