<%= link_to "Create new car", new_car_path %></br>
<table class="table table-bordered">
  <thead>
  	<tr>
  		<th>Name</th>
  		<th>Brand</th>
  		<th>Category</th>
  		<th>Price</th>
  		<th colspan="3">Actions</th>
  	</tr>
  </thead>
  <tbody>
  	<% @cars.each do |car| %>
  	<tr>
  		<td><%= car.name %></td>
  		<td><%= car.brand %></td>
  		<td><%= car.category %></td>
  		<td><%= car.price %></td>
  		<td><%= link_to "Edit", edit_car_path(car.id) %></td>
  		<td><%= link_to "Delete", car_path(car.id), data: { confirm: 'Are you sure?'}, method: :delete %></td>
      <td><%= link_to "Show The Cars", car_path(car.id) %></td>
  	</tr>
<% end %>
  </tbody>
</table>
